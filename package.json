{
    "name": "vitrea-client",
    "version": "0.1.1",
    "description": "Vitrea Smart Home API Client",
    "type": "module",
    "main": "dist/index.cjs",
    "module": "dist/index.js",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "require": "./dist/index.cjs"
        }
    },
    "files": [
        "dist",
        "README.md",
        "LICENSE"
    ],
    "sideEffects": false,
    "repository": {
        "type": "git",
        "url": "git+https://github.com/bdsoha/vitrea-client.git"
    },
    "bugs": {
        "url": "https://github.com/bdsoha/vitrea-client/issues"
    },
    "author": "Sohacheski, Dov Benyomin <b@kloud.email>",
    "license": "MIT",
    "keywords": [
        "api-client",
        "smarthome",
        "smart-home",
        "socket-client",
        "vitrea"
    ],
    "scripts": {
        "build": "tsup",
        "build:watch": "tsup --watch",
        "prepublishOnly": "yarn build && yarn test",
        "lint": "biome check src/",
        "lint:fix": "biome check --write src/",
        "test": "vitest run",
        "test:cov": "vitest run --coverage",
        "test:watch": "vitest"
    },
    "dependencies": {
        "p-event": "^7.0.0",
        "p-limit": "^7.1.1",
        "p-retry": "^6.2.1",
        "p-timeout": "^6.1.4"
    },
    "devDependencies": {
        "@biomejs/biome": "2.2.4",
        "@types/node": "^24.3.1",
        "@vitest/coverage-v8": "^3.2.4",
        "tsup": "^8.5.0",
        "typescript": "^5.9.2",
        "vite": "^7.1.5",
        "vitest": "^3.2.4"
    },
    "engines": {
        "node": "^18.17.0 || >=20.5.0"
    },
    "engineStrict": true
}
